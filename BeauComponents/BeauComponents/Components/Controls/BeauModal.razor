@if (IsVisible)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h5>@Title</h5>
                <button @onclick="CancelModal" class="close-btn">&times;</button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                <BeauButton Class="btn" OnClick="OKModal" Title="قابل قبول" Type="BeauButton.ButtonType.Success" />
                <BeauButton Class="btn" OnClick="CancelModal" Title="انصراف" Type="BeauButton.ButtonType.Secondary" />
            </div>
        </div>
    </div>
}

